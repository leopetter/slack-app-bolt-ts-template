{
  "name": "slack-app-bolt-ts",
  "version": "1.0.0",
  "description": "This is a bolt project to build a slack app using Typescript",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc -p .",
    "build:watch": "tsc -w -p .",
    "start": "npm run build && node dist/app.js",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "slack",
    "app",
    "integration",
    "workflow",
    "automation",
    "bolt",
    "typescrips"
  ],
  "author": "Leonard Petter",
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^3.12.2",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  }
}
